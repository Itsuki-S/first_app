<% provide(:title, "Login") %>
<div class="container form-container login-container">
  <div class="row">
    <div class="col-md-6 col-md-offset-4 mx-auto">
      <h1 class="form-title">ログイン</h1>
      <%= form_with(scope: :session, url: login_path, local: true) do |form| %>

        <div class="form-group">
          <%= form.email_field :email, class: 'form-control', placeholder: "Email" %>
        </div>

        <div class="form-group">
          <%= form.password_field :password, class: 'form-control', placeholder: "Password" %>
        </div>

        <div class="form-group">
          <%= link_to "パスワードを忘れた場合はこちら", new_password_reset_path %>
        </div>
        
        <div class="form-group form-check">
          <%= form.check_box :remember_me, class: 'form-check_input' %>
          <%= form.label :remember_me, 'ログインを維持する', class: 'form-check-label'%>
        </div>

        <div class="form-group">
          <%= form.submit "Login", class: "btn btn-primary btn-lg form-submit" %>
        </div>
      <% end %>
      <%= link_to " 新しくはじめる方はこちら", signup_path %>
    </div>
  </div>
</div>