<% provide(:title, "Edit user") %>
<% provide(:button_text, '変更を保存する') %>
<div class="container form-container">
  <div class="row">
    <div class="col-md-6 offset-3 mx-auto">
      <h1 class="form-title">プロフィール編集</h1>
      <%= render 'form' %>
      <div class="gravatar_edit">
        <%= gravatar_for @user %>
        <a href="https://gravatar.com/emails" target="_blank" rel="noopener">
          <h3 class="form-title">プロフィール画像の変更</h3>
        </a>
      </div>
    </div>
  </div>
</div>