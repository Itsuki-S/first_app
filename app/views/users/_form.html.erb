<%= form_with(model: @user, local: true) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group">
    <%= f.text_field :name, class: 'form-control form-control-lg', placeholder: "Name" %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, class: 'form-control form-control-lg', placeholder: "Email" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, class: 'form-control form-control-lg', placeholder: "Password"%>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, class: 'form-control form-control-lg', placeholder: "Password Confirmation"%>
  </div>

  <div class="form-group">
    <%= f.text_area :profile, size: "30x5", class: 'form-control form-control-lg', placeholder: "Profile"%>
  </div>

  <div class="form-group">
    <%= f.submit yield(:button_text), class: 'btn btn-primary form-submit' %>
  </div>
<% end %>