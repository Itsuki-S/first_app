@import "bootstrap";
@import '@fortawesome/fontawesome-free/scss/fontawesome';

/* mixins, variables, etc. */

@function get_vw($size, $viewport: 375) {
  $rate: 100 / $viewport;
  @return $rate * $size * 1vw;
}

@mixin fz_vw($font_size: 10) {
  font-size: $font_size * 1px;
  font-size: get_vw($font_size);
}


/* body */
body {
  background-color: rgb(224, 224, 224);
}

/* header */

header {
  height: 90px;
  .logo-img { 
    &:hover {
      opacity: 0.9;
    }
  }
  .logo-text {
    margin-left: 10px;
    font-size: 2em;
    color: white;
    font-weight: bold;
    &:hover {
      color: white;
      text-decoration: none;
      opacity: 0.9;
    }
  }
  ul {
    margin-right: 10px;
    .icon {
      color: white;
      margin-right: 5px;
    }
  }
  li {
    font-size: large;
    margin-right: 20px;
    &:hover {
      opacity: 0.9;
    }
  }
  .navbar-toggler{
    width: 120px !important;
    height: 60px !important;
  }
}

/* pagination */

.pagination {
  margin-top: 20px;
  margin-bottom: 20px;
}

/* home */

.vw {
  @include fz_vw(8);
}

.jumbotron-extended {
  background-image: url(<%= asset_path "diving_jumbotron.jpg" %>);
  background-size: cover;
  .container {
    h1, p {
      text-shadow:1px 1px 0 #000,-1px 1px 0 #000,1px -1px 0 #000,-1px -1px 0 #000;
      font-weight: bold;
      margin-bottom: 0.75rem;
      text-align: center;
      color: white;
    }
    h1 {
      margin-bottom: 1.5rem;
    }
    a {
      display: block;
      padding-top:24px;
      padding-bottom: 24px;
      margin-left: auto;
      margin-right: auto;
      margin-bottom: 2rem;
    }
  }
}

.jumbotron-fluid {
    margin: 16px;
    border-radius: 10px;
}

.top-page h2, .top-page p {
  color: #111;
}

.top-page {
  margin: 3rem 0;
  padding: 3rem 1rem;
  .my-icon {
    display: block;
    height: 40%;
    width: 40%;
    margin: auto;
    margin-bottom: 3rem;
  }
  h2 {
    font-size: 2rem;
    text-align: center;
    margin-bottom: 1.8rem;
  }
  p {
    font-size: 1.3rem;
    line-height: 2.1rem;
  }
}

/* footer */

footer {
  margin-top: 45px;
  padding-top: 5px;
  a {
    color: white;
    &:hover {
      color: white;
      opacity: 0.9;
      text-decoration: none;
    }
  }  
  small {
    float: left;
  }
  ul {
    float: right;
    list-style: none;
    margin: 0;
    li {
      font-size: 1.3em;
      float: left;
      margin-right: 20px;
    }
  }
}

/* sidebar */

.sidebar_fixed {
  position: sticky;
  top: 60px;
}
.sidebar_content {
  margin-bottom: 100px;
}

aside {
  section.user_info {
    margin-left: 5px;
    margin-top: 20px;
    a {
      margin-top: 2rem;
      padding-top: 30px;
      padding-bottom: 30px;
    }
  }
  section {
    padding: 10px 0;
    margin-top: 20px;
    &:first-child {
      border: 0;
      padding-top: 0;
    }
    h3 {
      font-weight: bold;
      margin-top: 35px;
    }
  }
}

.gravatar {
  float: left;
  margin-right: 10px;
  border: solid 3px #444;
  border-radius: 10px;
  }

/* users index */

.index-title {
  text-align: center;
  font-weight: bold;
  margin-bottom: 2rem;
  margin-top: 2rem;
}

.users {
  list-style: none;
  margin: 0;
  li {
    overflow: auto;
    padding: 10px 0;
    border-bottom: 1px solid gray;
    a {
      font-weight: bold;
      color: #333;
      font-size: 20pt;
    }
  }
}

// logs
.log-title {
  text-align: center;
  font-weight: bold;
  margin-bottom: 2rem;
  margin-top: 2rem;
}

.diving_logs{
  ol {
    padding: 0;
    list-style: none;
  }

.logs_overview{
  .card{
      padding: 0.5em 1em;
      margin: 2em 0;
      color: #5d627b;
      background: white;
      border-top: solid 5px #5d627b;
      box-shadow: 0 3px 5px rgba(0, 0, 0, 0.22);
      .log_top{
          text-align: center; 
          vertical-align: center;
          border-bottom: solid 2px #eee;
        .dive_number{
            margin-top: 8px;
            margin-bottom: 18px;
          }
        .btn { 
          float: right;
          padding-top: 15px;
          padding-bottom: 15px;
        }
      }
    }
  }
  .list-group-item{
    h3 h4 {
      display: inline-block;
    }
    h3 {
      text-align: center;
    }
  }
}
      

/* form */

.form-container {
  width: 100%;
  padding-top: 2rem !important;
}

.form-title {
  text-align: center;
  font-weight: bold;
  margin-bottom: 2rem;
}

.form-control {
  margin-bottom: 0;
}

.form-submit {
  width: 100%;
  padding: 20px;
}

.gravatar_edit {
  margin-top: 40px;
  h3 {
    margin-top: 20px;
    float: left;
  }
}

#error_explanation {
  color: red;
  ul {
    color: red;
    padding-bottom: 0;
  }
}

.field_with_errors .form-control {
  border-color: red;
}

.alert-form-extend {
  margin: 1.5rem 0 1rem;
}

.checkbox {
  margin-top: -10px;
  margin-bottom: 10px;
  span {
    margin-left: 20px;
    font-weight: normal;
  }
}

/* log form */

.log-form{
    .inputFile {
      display: flex;
    }

    .container-lg{
      width: 90%;
    }
  }

/* map */

#map{
  height: 400px;
  margin-top: 1rem;
  margin-bottom: 1rem;
}

 /* log-detail */

.log-detail {
  margin-top: 60px;
  .log-detail-item {
    background: white;
    padding: 15px;
    box-shadow: 0 3px 5px rgba(0, 0, 0, 0.22);
    color: #5d627b;
    border-radius: 10px;
    margin: 3px;
    h3, .pictures {
      text-align: center;
    }
  }
  .log-detail-top{
        padding-top: 25px;
        text-align: center;
  } 
}

