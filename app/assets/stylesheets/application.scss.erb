@import "bootstrap";
@import '@fortawesome/fontawesome-free/scss/fontawesome';

/* mixins, variables, etc. */



/* body */
body {
  background-color: rgb(224, 224, 224);
}

/* header */

header {
  height: 64px;
  .logo-img { 
    &:hover {
      opacity: 0.9;
    }
  }
  .logo-text {
    margin-left: 10px;
    font-size: 2em;
    color: white;
    font-weight: bold;
    &:hover {
      color: white;
      text-decoration: none;
      opacity: 0.9;
    }
  }
  ul {
    margin-right: 10px;
    .icon {
      color: white;
      margin-right: 5px;
    }
  }
  li {
    font-size: large;
    margin-right: 20px;
    &:hover {
      opacity: 0.9;
    }
  }
}

/* home */

.jumbotron-extended {
  background-image: url(<%= asset_path "diving_jumbotron.jpg" %>);
  background-size: cover;
  .container {
    h1, p {
      text-shadow:1px 1px 0 #000,-1px 1px 0 #000,1px -1px 0 #000,-1px -1px 0 #000;
      font-weight: bold;
      margin-bottom: 0.75rem;
      margin-left: auto;
      color: white;
    }
    h1 {
      margin-bottom: 1.5rem;
    }
    a {
      margin-bottom: 2rem;
    }
  }
}

.top-page h2, .top-page p {
  color: #111;
}

.top-page {
  margin: 3rem 0;
  padding: 3rem 1rem;
  .my-icon {
    display: block;
    height: 40%;
    width: 40%;
    margin: auto;
    margin-bottom: 3rem;
  }
  h2 {
    font-size: 2rem;
    text-align: center;
    margin-bottom: 1.8rem;
  }
  p {
    font-size: 1.3rem;
    line-height: 2.1rem;
  }
}

/* footer */

footer {
  margin-top: 45px;
  padding-top: 5px;
  a {
    color: white;
    &:hover {
      color: white;
      opacity: 0.9;
      text-decoration: none;
    }
  }  
  small {
    float: left;
  }
  ul {
    float: right;
    list-style: none;
    margin: 0;
    li {
      font-size: 1.3em;
      float: left;
      margin-right: 20px;
    }
  }
}

/* sidebar */

aside {
  section.user_info {
    margin-top: 20px;
  }
  section {
    padding: 10px 0;
    margin-top: 20px;
    &:first-child {
      border: 0;
      padding-top: 0;
    }
    span {
      display: block;
      margin-bottom: 3px;
      line-height: 1;
    }
    h1 {
      font-size: 1.4em;
      text-align: left;
      letter-spacing: -1px;
      margin-bottom: 3px;
      margin-top: 0px;
    }
  }
}

.gravatar {
  float: left;
  margin-right: 10px;
}

.gravatar_edit {
  margin-top: 15px;
}

/* signup login */

.signup-container, .form-container {
  width: 100%;
  padding-top: 1rem !important;
}

.signup-title, .form-title {
  text-align: center;
  font-weight: bold;
  margin-bottom: 2rem;
}

/* form */

.form-control {
  margin-bottom: 0;
}

.form-submit {
  width: 100%;
}

#error_explanation {
  color: red;
  ul {
    color: red;
    padding-bottom: 0;
  }
}

.field_with_errors .form-control {
  border-color: red;
}

.alert-form-extend {
  margin: 1.5rem 0 1rem;
}

.checkbox {
  margin-top: -10px;
  margin-bottom: 10px;
  span {
    margin-left: 20px;
    font-weight: normal;
  }
}